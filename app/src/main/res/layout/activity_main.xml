<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/textViewInputId"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background= "@color/light_grey"
        android:textSize="48sp"
        android:onClick="onOperator"
        android:gravity="end|bottom"
         />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >
        
        <Button
            android:id="@+id/btnSevenId"
            android:layout_width="0dp"
            android:textSize="30sp"
            android:layout_margin="2dp"
            android:layout_height="match_parent"
            android:layout_weight = "1"
            android:onClick="onDigit"
            android:text="7"/>
        <Button
            android:id="@+id/btnEighId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:layout_margin="2dp"
            android:onClick="onDigit"
            android:layout_weight = "1"
            android:text="8"/>
        <Button
            android:id="@+id/btnNineId"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:onClick="onDigit"
            android:textSize="30sp"
            android:layout_height="match_parent"
            android:layout_weight = "1"
            android:text="9"/>

        <Button
            android:id="@+id/btnDivideId"
            android:layout_width="0dp"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:layout_height="match_parent"
            android:onClick="onDigit"
            android:layout_weight = "1"
            android:text="/"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/btnFourId"
            android:layout_width="0dp"
            android:layout_margin="2dp"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:layout_weight = "1"
            android:onClick="onDigit"
            android:text="4"/>
        <Button
            android:id="@+id/btnFiveId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:layout_margin="2dp"
            android:onClick="onDigit"
            android:layout_weight = "1"
            android:text="5"/>
        <Button
            android:id="@+id/btnSixId"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:textSize="30sp"
            android:onClick="onDigit"
            android:layout_height="match_parent"
            android:layout_weight = "1"
            android:text="6"/>

        <Button
            android:id="@+id/btnMultId"
            android:layout_width="0dp"
            android:textSize="30sp"
            android:layout_margin="2dp"
            android:layout_height="match_parent"
            android:onClick="onOperator"
            android:layout_weight = "1"
            android:text="*"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/btnOneId"
            android:layout_width="0dp"
            android:layout_margin="2dp"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:layout_weight = "1"
            android:onClick="onDigit"
            android:text="1"/>
        <Button
            android:id="@+id/btnTwoId"
            android:layout_width="0dp"
            android:textSize="30sp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:onClick="onDigit"
            android:layout_weight = "1"
            android:text="2"/>
        <Button
            android:id="@+id/btnThreeId"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:textSize="30sp"
            android:onClick="onDigit"
            android:layout_height="match_parent"
            android:layout_weight = "1"
            android:text="3"/>

        <Button
            android:id="@+id/btnSubId"
            android:layout_width="0dp"
            android:layout_margin="2dp"
            android:textSize="30sp"
            android:layout_height="match_parent"
            android:onClick="onOperator"
            android:layout_weight = "1"
            android:text="-"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"

        >

        <Button
            android:id="@+id/btnZeroId"
            android:layout_width="0dp"
            android:layout_margin="2dp"
            android:layout_height="match_parent"
            android:layout_weight = "1"
            android:textSize="30sp"
            android:onClick="onDigit"
            android:text="0"/>

        <Button
            android:id="@+id/btnDotId"
            android:layout_width="0dp"
            android:layout_margin="2dp"
            android:layout_height="match_parent"
            android:layout_weight = "1"
            android:onClick="onDecimalPoint"
            android:textSize="25sp"
            android:text="."/>


        <Button
            android:id="@+id/btnClearId"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:onClick="onClear"
            android:layout_weight = "1"
            android:textSize="30sp"
            android:text="CLR"/>

        <Button
            android:id="@+id/btnAddId"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:onClick="onOperator"
            android:textSize="25sp"
            android:layout_height="match_parent"
            android:layout_weight = "1"
            android:text="+"/>



    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="1"
        >

        <Button
            android:id="@+id/btnEqualId"
            android:layout_margin="2dp"
            android:layout_width="0dp"
            android:onClick="onEqual"
            android:layout_height="match_parent"
            android:textSize="30sp"
            android:layout_weight = "1"
            android:text="="/>



    </LinearLayout>


</LinearLayout>